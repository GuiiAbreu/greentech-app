generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
}

enum UserRole {
  FARMER
  CONSUMER
}

enum ProductCategory {
  FRUTAS
  HORTALICAS
  LATICINIOS
  OVOS
  GRAOS
}

enum UnitType {
  BANDEJA
  KG
  UNIDADE
  MACO
}

model User {
  id           String   @id @default(uuid())
  role         UserRole
  name         String
  email        String   @unique
  passwordHash String

  phone        String
  city         String

  createdAt    DateTime @default(now())
  updatedAt    DateTime @updatedAt

  farmerProfile FarmerProfile? // só existe quando role = FARMER

  products     Product[]
}

model FarmerProfile {
  userId       String  @id
  user         User    @relation(fields: [userId], references: [id], onDelete: Cascade)

  propertyName String  // obrigatório p/ FARMER
  address      String  // obrigatório p/ FARMER

  createdAt    DateTime @default(now())
  updatedAt    DateTime @updatedAt
}

model Product {
  id          String          @id @default(uuid())
  farmerId    String
  farmer      User            @relation(fields: [farmerId], references: [id], onDelete: Cascade)

  name        String
  description String
  category    ProductCategory
  priceCents  Int
  unit        UnitType
  stockQty    Int
  active      Boolean         @default(true)

  photos      ProductPhoto[]
  certs       Certification[]

  createdAt   DateTime        @default(now())
  updatedAt   DateTime        @updatedAt

  @@index([farmerId])
  @@index([category])
  @@index([active])
}

model ProductPhoto {
  id        String   @id @default(uuid())
  productId String
  product   Product  @relation(fields: [productId], references: [id], onDelete: Cascade)
  url       String
  createdAt DateTime @default(now())

  @@index([productId])
}

model Certification {
  id        String   @id @default(uuid())
  productId String
  product   Product  @relation(fields: [productId], references: [id], onDelete: Cascade)

  title     String
  issuer    String?
  validUntil DateTime?

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@index([productId])
  @@index([validUntil])
}