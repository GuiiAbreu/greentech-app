// Prisma schema - GreenTech API

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
}

enum UserRole {
  FARMER
  CONSUMER
}

enum ProductCategory {
  FRUTAS
  HORTALICAS
  LATICINIOS
  OVOS
  GRAOS
}

enum UnitType {
  BANDEJA
  KG
  UNIDADE
  MACO
}

enum DeliveryMethod {
  DELIVERY
  PICKUP
}

enum OrderStatus {
  PENDING
  CONFIRMED
  DONE
  CANCELED
}

model User {
  id           String   @id @default(uuid())
  role         UserRole
  name         String
  email        String   @unique
  passwordHash String

  phone        String
  city         String

  createdAt    DateTime @default(now())
  updatedAt    DateTime @updatedAt

  farmerProfile FarmerProfile?

  products      Product[]

  // Pedidos
  ordersAsConsumer Order[] @relation("OrderConsumer")
  ordersAsFarmer   Order[] @relation("OrderFarmer")
}

model FarmerProfile {
  userId       String  @id
  user         User    @relation(fields: [userId], references: [id], onDelete: Cascade)

  propertyName String
  address      String

  createdAt    DateTime @default(now())
  updatedAt    DateTime @updatedAt
}

model Product {
  id          String          @id @default(uuid())
  farmerId    String
  farmer      User            @relation(fields: [farmerId], references: [id], onDelete: Cascade)

  name        String
  description String
  category    ProductCategory
  priceCents  Int
  unit        UnitType
  stockQty    Int
  active      Boolean         @default(true)

  photos      ProductPhoto[]
  certs       Certification[]

  orderItems  OrderItem[]

  createdAt   DateTime        @default(now())
  updatedAt   DateTime        @updatedAt

  @@index([farmerId])
  @@index([category])
  @@index([active])
}

model ProductPhoto {
  id        String   @id @default(uuid())
  productId String
  product   Product  @relation(fields: [productId], references: [id], onDelete: Cascade)
  url       String
  createdAt DateTime @default(now())

  @@index([productId])
}

model Certification {
  id         String   @id @default(uuid())
  productId  String
  product    Product  @relation(fields: [productId], references: [id], onDelete: Cascade)

  title      String
  issuer     String?
  validUntil DateTime?

  createdAt  DateTime @default(now())
  updatedAt  DateTime @updatedAt

  @@index([productId])
  @@index([validUntil])
}

model Order {
  id             String         @id @default(uuid())

  consumerId     String
  consumer       User           @relation("OrderConsumer", fields: [consumerId], references: [id], onDelete: Restrict)

  farmerId       String
  farmer         User           @relation("OrderFarmer", fields: [farmerId], references: [id], onDelete: Restrict)

  deliveryMethod DeliveryMethod
  status         OrderStatus    @default(PENDING)

  subtotalCents  Int
  note           String?

  items          OrderItem[]

  createdAt      DateTime       @default(now())
  updatedAt      DateTime       @updatedAt

  @@index([consumerId])
  @@index([farmerId])
  @@index([status])
  @@index([createdAt])
}

model OrderItem {
  id             String   @id @default(uuid())

  orderId        String
  order          Order    @relation(fields: [orderId], references: [id], onDelete: Cascade)

  productId      String
  product        Product  @relation(fields: [productId], references: [id], onDelete: Restrict)

  // Snapshot do produto no momento do pedido
  productName    String
  unitPriceCents Int

  qty            Int
  lineTotalCents Int

  createdAt      DateTime @default(now())

  @@index([orderId])
  @@index([productId])
}
