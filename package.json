{
  "name": "greentech-app",
  "private": true,
  "packageManager": "pnpm@9.0.0",
  "scripts": {
    "db:up": "docker compose up -d",
    "db:down": "docker compose down",
    "dev:api": "pnpm --filter @greentech/api dev",
    "dev:mobile": "pnpm --filter @greentech/mobile dev",
    "dev": "concurrently -n API,MOBILE -c auto \"pnpm:dev:api\" \"pnpm:dev:mobile\""
  },
  "devDependencies": {
    "concurrently": "^9.0.0",
    "prettier": "^3.3.3"
  }
}
